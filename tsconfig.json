{
	"compilerOptions": {
		"outDir": "dist/esm",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"target": "ES2022",
		"module": "node16",
		"moduleResolution": "node16",
		"jsx": "react",
		"noEmit": false,
		"noUncheckedIndexedAccess": false,
		"skipLibCheck": true,
		"strict": true,
		"rootDir": "src",

		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "example", "lib/**/*", "test/**/*", "scripts/**/*", "src/**/_*", "src/_**/*"]
}
