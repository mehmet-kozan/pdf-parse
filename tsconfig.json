{
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"noEmit": true,
		"noUncheckedIndexedAccess": false,
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,

		"verbatimModuleSyntax": true
	},
	"exclude": ["dist", "exp"]
}
