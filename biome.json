{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!dist",
			"!reports/demo/dist-web",
			"!reports/test",
			"!reports/pdf",
			"!reports/coverage",
			"!reports/benchmark",
			"!bin/worker/worker_source.js",
			"!bin/worker/worker_source.cjs",
			"!tests/integration/*/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noImplicitAnyLet": "warn",
				"noDebugger": "warn",
				"noConsole": "warn"
			},
			"style": {
				"useConst": {
					"level": "info",
					"fix": "none",
					"options": {}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["**/helper/**", "pdf-parse/canvas", "pdf-parse/worker"],
							[":NODE:"],
							[":PACKAGE:"],
							":BLANK_LINE:",
							[":URL:", ":PATH:"],
							"**"
						]
					}
				}
			}
		}
	},
	"overrides": [
		{
			"includes": ["examples/**"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": true
			}
		}
	]
}
