{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src/node",
		"outDir": "dist/node/esm",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"target": "ES2022",
		"module": "node16",
		"moduleResolution": "node16",
		"jsx": "react",
		"noEmit": false,
		"noUncheckedIndexedAccess": false,
		"skipLibCheck": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"paths": {
			"pdf-parse/utils": ["src/node"]
		}
	},
	"include": ["src/node/**/*"]
}
